<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Register on Wanderlust</h1>
    <div class="col-6 offset-3 mt-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label form="username" class="form-label">Username</label>
                <input name="username" placeholder="Username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <label form="email" class="form-label">Email</label>
                <input name="email" placeholder="Email" id="email" type="email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label form="password" class="form-label">Password</label>
                <input name="password" placeholder="Password" id="password" type="password" class="form-control" required>
            </div>

            <button class="btn btn-success">SignUp</button>
        </form>

    </div>
</div>